CREATE CONSTRAINT IF NOT EXISTS FOR (s:Supplement) REQUIRE s.name IS UNIQUE;
CREATE CONSTRAINT IF NOT EXISTS FOR (c:Condition)  REQUIRE c.name IS UNIQUE;
CREATE CONSTRAINT IF NOT EXISTS FOR (d:Drug)       REQUIRE d.name IS UNIQUE;
CREATE FULLTEXT INDEX nameSearch IF NOT EXISTS
FOR (n:Supplement|Condition|Drug) ON EACH [n.name];
